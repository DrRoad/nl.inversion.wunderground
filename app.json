{
  "$schema": "https://raw.githubusercontent.com/tmsns/homey-json-schema/master/schema.json",
    "id": "nl.inversion.wunderground",
    "name": {
        "en": "Weather Underground",
        "nl": "Weather Underground"
    },

    "description": {
        "en": "Informs you about the weather",
        "nl": "Geeft informatie over het weer"
    },

    "version": "1.0.2",
    "compatibility": ">=1.1.2",
    "category": "internet",
    "author": {
        "name": "Inversion NL",
        "email": "inversion-nl@gmail.com"
    },

    "permissions": [
        "homey:manager:geolocation",
        "homey:manager:speech-input",
        "homey:manager:speech-output"
    ],

    "images": {
        "large": "./assets/images/large.jpg",
        "small": "./assets/images/small.jpg"
    },

    "dependencies": {
        "wundernode": "*"
    },

    "capabilities": {
      "wu_visibility": {
        "type": "number",
        "title": {
          "en": "Visibility",
          "nl": "Zicht"
        },
        "getable": true,
        "setable": false,
        "units": {
          "en": "Km"
        },
        "min": 0,
        "max": 20,
        "step": 1
      },
      "wu_description": {
        "type": "string",
        "title": {
          "en": "Description",
          "nl": "Beschrijving"
        },
        "getable": true,
        "setable": false
      }
    },

    "drivers": [{
        "id": "weather_card",
        "name": {
          "en": "Weather card",
          "nl": "Weer kaart"
        },
        "images": {
          "large": "drivers/weather_card/assets/images/large.png",
          "small": "drivers/weather_card/assets/images/small.png"
        },
        "class": "sensor",
        "capabilities": [
          "measure_temperature",
          "measure_humidity",
          "measure_pressure",
          "measure_wind_strength",
          "measure_gust_strength",
          "measure_wind_angle",
          "measure_rain",
          "measure_ultraviolet",
          "wu_visibility",
          "wu_description"
        ],
        "pair": [{
          "id": "start"
        }],
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": [ ]
          },
          {
            "id": "sensor",
            "capabilities": [
              "measure_temperature",
              "measure_humidity",
              "measure_pressure",
              "measure_wind_strength",
              "measure_gust_strength",
              "measure_wind_angle",
              "measure_rain",
              "measure_ultraviolet",
              "wu_visibility",
              "wu_description"
            ],
            "options": {
              "icons": {
                "wu_visibility": "./drivers/weather_card/assets/images/visibility.png",
                "wu_description": "./drivers/weather_card/assets/images/description.png"
              }
            }
          }
        ]
      }
    }],

