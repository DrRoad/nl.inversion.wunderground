                },
                "example": {
                  "en": "Cloudy",
                  "nl": "Bewolkt"
                }
              }
            ],
            "args":
                [
                  {
                    "name": "variable",
                    "type": "number",
                    "placeholder" :
                      {
                        "en": "degrees celsius",
                        "nl": "graden celsius"
